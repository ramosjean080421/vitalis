{
  "name": "vitalis",
  "version": "1.0.0",
  "description": "VITALIS - Sistema web para control de negocios multi-inquilino",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:api": "cross-env PORT=4001 DEFAULT_TENANT=acme tsx watch src/index.ts",
    "dev:web": "npm --prefix frontend run dev",
    "dev:all": "concurrently -n api,web -c green,cyan \"npm:dev:api\" \"npm:dev:web\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:seed": "prisma db seed"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "@tanstack/react-query": "^5.85.5",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "openai": "^5.16.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "prisma": "^6.15.0",
    "tsx": "^4.15.7",
    "typescript": "^5.4.5"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
