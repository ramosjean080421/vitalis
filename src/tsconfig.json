{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": { "@/*": ["./*"] },
    "types": ["react", "react-dom"]
  },
  "include": [
    "app/products/page.tsx",
    "app/tenants/page.tsx",
    "providers/**/*",
    "lib/**/*"
  ],
  "exclude": ["../node_modules"]
}
